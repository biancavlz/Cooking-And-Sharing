<%= render 'shared/page_title', title: 'edit an existing recipe' %>

<% if @recipe.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">
      <%= pluralize(@recipe.errors.count, "error") %>
      prohidited this <%= @recipe.class %> from being saved:
    </h4>
    
    <ul>
      <% @recipe.errors.full_messages.each do |error_msg| %>
        <li><%= error_msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="row">
  <div class="col-md-12">
    
    <%= form_for(@recipe, :html => { class: "form-horizontal", role: "form" }) do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control", placeholder: "Name of recipe", autofocus: true %>
      </div>
      
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control",
          placeholder: "Type the steps and description for your recipe", 
          rows: 15 
        %>
      </div>
      <div class="row">
        <div class="col-sm-2">
          <div class="form-group">
            <%= f.submit "Submit", class: "btn btn-secondary btn-color" %>
          </div>
        </div>
        
        <div class="col-sm-10 text-right color-link">
          <%= link_to "Cancel", recipes_path %>
        </div>
      </div>
    <% end %>
  </div>
</div>

