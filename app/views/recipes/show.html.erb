<%= render "shared/page_title", title: @recipe.name %>

<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col-md-2">
        <%= link_to gravatar_for(@recipe.user), recipes_path%>
      </div>
      <div class="col-md-10">
        <p class="card-text">
          <%= simple_format(@recipe.description) %>
        </p>
        <p class="card-text">
          <small class="text-muted">
            <em> 
              Created by <%= @recipe.user.name %> <%= time_ago_in_words(@recipe.created_at) %> ago 
            </em>
          </small>
        </p>
      </div>
    </div>

    <div class="recipe-actions">
      <div class="row offset-md-2">
        <div class="col-md-4">
          <%= link_to "Edit", edit_recipe_path(@recipe), class: "btn btn-outline-secondary" %>
          <%= link_to "Delete", recipe_path(@recipe),method: :delete, 
            data: { Confirm: "Are you sure you want to delete this recipe?" },
            class: "btn btn-outline-secondary" %>
        </div>
        <div class="col-md-4 color-link">
          <%= link_to "Back to recipes", recipes_path %>
        </div>
      </div>
    </div>
  </div>
</div>
