<%= render "shared/page_title", title: @recipe.name %>

<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col-md-2">
        <%= link_to gravatar_for(@recipe.user), recipes_path%>
      </div>
      <div class="col-md-10">
        <p class="card-text">
          <%= simple_format(@recipe.description) %>
        </p>
        <p class="card-text">
          <small class="text-muted">
            <em> 
              Created by <%= @recipe.user.name %> <%= time_ago_in_words(@recipe.created_at) %> ago 
            </em>
          </small>
        </p>
      </div>
    </div>
    <div class="recipe-actions">
      <div class="col-md-2 offset-md-2 text-left">
        <%= link_to "Edit", edit_recipe_path(@recipe), class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
